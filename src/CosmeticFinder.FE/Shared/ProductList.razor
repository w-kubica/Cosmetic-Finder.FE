@using CosmeticFinder.FE.Gateways.Responses

@if (Cosmetic is not null)
{
    <div class="container">
        @for (var i = 0; i <= Cosmetic.Count(); i++)
        {
            var row = Cosmetic
                .Skip(ColumnCount * i)
                .Take(ColumnCount)
                .ToList();
                
                <div class="row">
                    @foreach (var item in row)
                    {
                        <div class="col">
                            <Product
                                Brand="@item.Brand"
                                Caption="@item.Caption"
                                Url="@item.NavigateUrl" />
                        </div>
                    }

                    @for (var j = 0; j < ColumnCount - row.Count; j++)
                    {
                        <div class="col">
                        </div>
                    }
                </div>
        }
    </div>

}

@code {
    [Parameter]
    public IEnumerable<CosmeticResponse>? Cosmetic { get; set; }

    private int ColumnCount { get; set; } = 4;
}